<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reminderucr_layout"
    tools:context=".app.reminders.ReminderUCRActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tableRowHeader1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@string/fuente"
                        android:text="Primer Semestre"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/contenido" />

                    <ImageView
                        android:id="@+id/add_class_time_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="29dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/dropdown_arrow"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/add_class_time_image_up1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="29dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/collapse_arrow"
                        android:visibility="gone"
                        app:tint="@color/colorPrimary" />

                </RelativeLayout>

            </TableRow>


            <fragment
                android:id="@+id/fragmentList1"
                android:name="cr.ac.ucr.ecci.eseg.uhelper.app.reminders.ReminderUCRFragment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRowHeader1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="@dimen/espaciado"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:id="@+id/tableRowHeader2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/header2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@string/fuente"
                        android:text="Segundo Semestre"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/contenido" />

                    <ImageView
                        android:id="@+id/add_class_time_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="29dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/dropdown_arrow"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/add_class_time_image_up2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="29dp"
                        android:layout_marginBottom="15dp"
                        android:visibility="gone"
                        android:src="@drawable/collapse_arrow"
                        app:tint="@color/colorPrimary" />

                </RelativeLayout>

            </TableRow>

            <fragment
                android:id="@+id/fragmentList2"
                android:name="cr.ac.ucr.ecci.eseg.uhelper.app.reminders.ReminderUCRFragment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRowHeader2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="@dimen/espaciado"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tableRowHeader3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/header3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@string/fuente"
                        android:text="Tercer Semestre"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/contenido" />

                    <ImageView
                        android:id="@+id/add_class_time_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="29dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/dropdown_arrow"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/add_class_time_image_up3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="29dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/collapse_arrow"
                        android:visibility="gone"
                        app:tint="@color/colorPrimary" />

                </RelativeLayout>

            </TableRow>

            <fragment
                android:id="@+id/fragmentList3"
                android:name="cr.ac.ucr.ecci.eseg.uhelper.app.reminders.ReminderUCRFragment3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRowHeader3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="@dimen/espaciado"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>